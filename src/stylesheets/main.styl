body
  background-size 20%
  background-position center 100px
  background-repeat no-repeat
  color rgba(255, 255, 255, .8);

/* Colors */
.green
  background-color #89c450

.orange
  background-color orange

/* Icons */
.ghost
  background-image embedurl('ghost.svg')
  animation ghost 1s ease-out

@keyframes ghost
  0%
    background-size 20%
  25%
    background-size 5%
  55%
    background-size 4%
  65%
    background-size 26%
  70%
    background-size 25%
  75%
    background-size 18%
  80%
    background-size 21.5%
  85%
    background-size 19%
  90%
    background-size 21%
  95%
    background-size 19.5%
  100%
    background-size 20%

.tape
  background-image embedurl('tape.svg')

@import 'fonts.styl'
@import 'headlines.styl'
